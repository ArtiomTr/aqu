{
    "name": "${name}",
    "version": "0.0.0",
    "description": "${description}",
    "main": "./dist/index.js",
    "module": "./dist/${name}.esm.js",
    "files": [
        "dist"
    ],
    "size-limit": [
        {
            "path": "dist/${name}.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/${name}.esm.js",
            "limit": "10 KB"
        }
    ],
    "scripts": {
        "build": "trwl build",
        "start": "trwl watch",
        "lint": "trwl lint",
        "lint:fix": "trwl lint --fix",
        "test": "trwl test --passWithNoTests",
        "test:watch": "trwl test --passWithNoTests --watch",
        "test:coverage": "trwl test --silent --ci --coverage --coverageReporters=\"text\" --coverageReporters=\"text-summary\"",
        "prepare": "trwl build",
        "release": "np",
        "size": "size-limit",
        "size:why": "size-limit --why"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,json}": "npm run lint:fix"
    },
    "author": "${author}",
    "license": "${license}",
    "homepage": "${repo}#readme",
    "repository": {
        "type": "git",
        "url": "git+${repo}.git"
    },
    "bugs": {
        "url": "${repo}/issues"
    },
    "devDependencies": {
        "trwl": "${versions.trwl}",
        "np": "^${versions.np}",
        "lint-staged": "^${versions.lintStaged}",
        "husky": "^${versions.husky}",
        "size-limit": "^${versions.sizeLimit}",
        "@size-limit/preset-small-lib": "^${versions.sizeLimitPresetSmallLib}"
    }
}
